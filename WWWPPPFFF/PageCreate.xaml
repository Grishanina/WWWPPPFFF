<Page x:Class="WWWPPPFFF.PageCreate"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WWWPPPFFF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageCreate">

    <Grid>
        <ScrollViewer>
            <StackPanel Width="500">
                <GroupBox Header="Введите название продукта">
                    <TextBox Name="tbName"></TextBox>
                </GroupBox>
                <GroupBox Header="Выберите тип продукта">
                    <ComboBox Name="cmbType"></ComboBox>
                </GroupBox>
                <GroupBox Header="Введите цену продукта">
                    <TextBox Name="tbPriority"></TextBox>
                </GroupBox>

                <Button Name="btnAdd" Click="btnAdd_Click">Сохранить информацию</Button>
                <Button Name="btnHom" Click="btnHom_Click">Назад</Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
